# Environment Configuration Template
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=3000
APP_NAME=GramAI Advisor
APP_VERSION=1.0.0

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=gramai_advisor
POSTGRES_USER=gramai_user
POSTGRES_PASSWORD=gramai_password
POSTGRES_URL=postgresql://gramai_user:gramai_password@localhost:5432/gramai_advisor

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://localhost:9200

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=gramai_minio
MINIO_SECRET_KEY=gramai_minio_password
MINIO_BUCKET_NAME=gramai-files

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=gramai-advisor
KAFKA_GROUP_ID=gramai-group

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
IMD_WEATHER_API_KEY=your-imd-weather-api-key
ENAM_API_KEY=your-enam-api-key
AGMARKNET_API_KEY=your-agmarknet-api-key

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development
ENABLE_SWAGGER=true
ENABLE_DEBUG=true